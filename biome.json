{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noFloatingPromises": "error"
			},
			"suspicious": {
				"useGuardForIn": "error"
			},
			"style": {
				"useTemplate": "off"
			}
		}
	},
	"files": {
		"includes": [
			"./*.json",
			"./*.{ts,tsx,mts,js,jsx,mjs}",
			"./packages/*/*.{ts,tsx,mts,js,jsx,mjs}",
			"./packages/*/src/**/*.{ts,tsx,mts,js,jsx,mjs}",
			"./packages/website/.vitepress/*.{ts,tsx,mts,js,jsx,mjs}"
		]
	}
}
