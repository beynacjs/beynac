{
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "test-apps/*"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "clean": "bun run --filter='*' clean",
    "check": "bun run check:test && bun run check:tsc && bun run check:lint && bun run check:format",
    "check:test": "bun run --filter='*' check:test",
    "check:tsc": "bun run --filter='*' check:tsc",
    "check:lint": "bun run --filter=* lint",
    "check:format": "biome check .",
    "format": "biome check --write .",
    "format:check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/bun": "1.2.21",
    "bun-types": "1.2.21"
  }
}
