{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["**/node_modules/**", "**/dist/**", "src/vendor/**", "**/.snapshot/**"],
  "rules": {
    "typescript/no-base-to-string": "off",
    "typescript/no-for-in-array": "error",
    "typescript/no-explicit-any": "error",
    "typescript/consistent-type-imports": "error",
    "no-implied-eval": "off",
    "no-control-regex": "off",
    "prefer-node-protocol": "error",
    "no-restricted-imports": ["error", {
      "patterns": [
        {
          "group": ["bun", "bun:*"],
          "message": "Direct imports from 'bun' or 'bun:*' are only allowed in test files. Use 'node:' equivalents where possible."
        },
        {
          "group": ["node:path"],
          "message": "Direct imports from 'node:path' should use the abstraction from src/storage/path.ts instead."
        }
      ]
    }]
  },
  "overrides": [
    {
      "files": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.test.mts", "src/test-utils/**", "src/invariants.test.ts", "src/contracts/contracts.test.ts"],
      "rules": {
        "typescript/no-explicit-any": "off",
        "typescript/unbound-method": "off",
        "no-restricted-imports": "off",
        "no-eval": "off"
      }
    },
    {
      "files": [
        "src/storage/path.ts",
        "src/helpers/headers.ts"
      ],
      "rules": {
        "no-restricted-imports": ["error", {
          "patterns": [{
            "group": ["bun", "bun:*"],
            "message": "Direct imports from 'bun' or 'bun:*' are only allowed in test files. Use 'node:' equivalents where possible."
          }]
        }]
      }
    }
  ]
}
