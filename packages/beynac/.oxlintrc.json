{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["**/node_modules/**", "**/dist/**", "src/vendor/**", "**/.snapshot/**"],
  "rules": {
    "typescript/no-base-to-string": "off",
    "typescript/no-for-in-array": "error",
    "typescript/no-explicit-any": "error",
    "typescript/consistent-type-imports": "error",
    "no-implied-eval": "off",
    "no-control-regex": "off",
    "prefer-node-protocol": "error",
    "no-unused-private-class-members": "error",
    "no-console": "error",
    "no-debugger": "error",
    "no-restricted-imports": ["error", {
      "patterns": [
        {
          "group": ["bun", "bun:*"],
          "message": "Direct imports from 'bun' or 'bun:*' are only allowed in test files"
        },
        {
          "group": ["node:path"],
          "message": "Direct imports from 'node:path' should use the abstraction from src/storage/path.ts instead"
        },
        {
          "group": ["**/contracts"],
          "message": "Do not import from the central contracts.ts file"
        },
        {
          "group": ["**/events"],
          "message": "Do not import from the central events.ts file"
        },
        {
          "group": ["**/errors"],
          "message": "Do not import from the central errors.ts file"
        },
        {
          "group": ["**/*-entry-point"],
          "message": "Do not import from entry point files. Import from the specific implementation files instead."
        }
      ]
    }]
  },
  "overrides": [
    {
      "files": ["scripts/**/*", "src/**/*.test.{ts,tsx,mts}", "src/**/*.test.mts", "src/test-utils/**"],
      "rules": {
        "typescript/no-explicit-any": "off",
        "typescript/unbound-method": "off",
        "no-restricted-imports": "off",
        "no-eval": "off",
        "no-console": "off"
      }
    }
  ]
}
