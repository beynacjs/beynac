{
  "name": "beynac",
  "version": "0.0.1",
  "description": "A batteries-included full-stack framework for TypeScript",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js"
    },
    "./facades": {
      "types": "./dist/facades.d.ts",
      "import": "./dist/facades.js"
    },
    "./integrations/*": {
      "types": "./dist/integrations/*.d.ts",
      "import": "./dist/integrations/*.js"
    },
    "./view": {
      "types": "./dist/view/index.d.ts",
      "import": "./dist/view/index.js"
    },
    "./view/jsx-runtime": {
      "types": "./dist/view/jsx-runtime.d.ts",
      "import": "./dist/view/jsx-runtime.js"
    },
    "./view/jsx-dev-runtime": {
      "types": "./dist/view/jsx-dev-runtime.d.ts",
      "import": "./dist/view/jsx-dev-runtime.js"
    },
    "./router": {
      "types": "./dist/router/index.d.ts",
      "import": "./dist/router/index.js"
    },
    "./events": {
      "types": "./dist/events.d.ts",
      "import": "./dist/events.js"
    }
  },
  "scripts": {
    "check": "bun run check:test && bun run check:tsc && bun run check:lint && bun run check:format",
    "check:test": "bun test --only-failures",
    "check:tsc": "tsgo --noEmit",
    "check:lint": "oxlint --type-aware src/",
    "check:format": "biome check",
    "format": "biome check --write .",
    "lint": "oxlint --type-aware src/",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "clean": "rm -rf dist"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BernieSumption/beynac.git"
  },
  "bugs": {
    "url": "https://github.com/BernieSumption/beynac/issues"
  },
  "homepage": "https://github.com/BernieSumption/beynac#readme",
  "author": "Bernie Sumption",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "1.2.19",
    "@typescript/native-preview": "^7.0.0-dev.20251023.1",
    "beynac": "workspace:",
    "bun-types": "1.2.19",
    "csstype": "3.1.3",
    "next": "^15.0.0",
    "oxlint": "^1.24.0",
    "oxlint-tsgolint": "^0.2.1",
    "tsdown": "^0.15.9",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "devalue": "^5.3.2"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
