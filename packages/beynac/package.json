{
  "name": "beynac",
  "version": "0.0.1",
  "description": "A batteries-included full-stack framework for TypeScript",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js"
    },
    "./events": {
      "types": "./dist/events.d.ts",
      "import": "./dist/events.js"
    },
    "./facades": {
      "types": "./dist/facades.d.ts",
      "import": "./dist/facades.js"
    },
    "./integrations/*": {
      "types": "./dist/integrations/*.d.ts",
      "import": "./dist/integrations/*.js"
    },
    "./view": {
      "types": "./dist/view/index.d.ts",
      "import": "./dist/view/index.js"
    },
    "./view/jsx-runtime": {
      "types": "./dist/view/jsx-runtime.d.ts",
      "import": "./dist/view/jsx-runtime.js"
    },
    "./view/jsx-dev-runtime": {
      "types": "./dist/view/jsx-dev-runtime.d.ts",
      "import": "./dist/view/jsx-dev-runtime.js"
    },
    "./router": {
      "types": "./dist/router/index.d.ts",
      "import": "./dist/router/index.js"
    }
  },
  "scripts": {
    "check": "bun run check:tsc",
    "check:tsc": "tsc --noEmit",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "prebuild": "mkdir -p src/vendor && cp node_modules/csstype/index.d.ts src/vendor/csstype.d.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "bun run build -- --watch",
    "postbuild": "mkdir -p dist/vendor && cp src/vendor/csstype.d.ts dist/vendor/",
    "clean": "rm -rf dist"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BernieSumption/beynac.git"
  },
  "bugs": {
    "url": "https://github.com/BernieSumption/beynac/issues"
  },
  "homepage": "https://github.com/BernieSumption/beynac#readme",
  "author": "Bernie Sumption",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "1.2.19",
    "beynac": "workspace:",
    "bun-types": "1.2.19",
    "csstype": "^3.1.3",
    "next": "^15.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "devalue": "^5.3.2",
    "rou3": "^0.5.1"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
