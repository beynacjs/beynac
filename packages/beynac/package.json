{
  "name": "beynac",
  "version": "0.0.1",
  "description": "A batteries-included full-stack framework for TypeScript",
  "type": "module",
  "main": "./dist/index.mjs",
  "exports": {
    "./container": "./dist/container.mjs",
    "./contracts": "./dist/contracts.mjs",
    "./errors": "./dist/errors.mjs",
    "./events": "./dist/events.mjs",
    "./facades": "./dist/facades.mjs",
    "./helpers/hash": {
      "types": "./dist/hash.d.mts",
      "default": "./dist/helpers/hash.mjs"
    },
    "./helpers/headers": {
      "types": "./dist/headers.d.mts",
      "default": "./dist/helpers/headers.mjs"
    },
    "./helpers/str": {
      "types": "./dist/str.d.mts",
      "default": "./dist/helpers/str.mjs"
    },
    "./helpers/time": {
      "types": "./dist/time.d.mts",
      "default": "./dist/helpers/time.mjs"
    },
    "./http": "./dist/http.mjs",
    ".": "./dist/index.mjs",
    "./integrations": "./dist/integrations.mjs",
    "./integrations/next": {
      "types": "./dist/next.d.mts",
      "default": "./dist/integrations/next.mjs"
    },
    "./storage": "./dist/storage.mjs",
    "./testing": "./dist/testing.mjs",
    "./view": "./dist/view.mjs",
    "./view/jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.mts",
      "default": "./dist/view/jsx-dev-runtime.mjs"
    },
    "./view/jsx-runtime": {
      "types": "./dist/jsx-runtime.d.mts",
      "default": "./dist/view/jsx-runtime.mjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "check": "bun run check:tsc && bun run check:test && bun run check:lint && bun run check:format",
    "check:test": "bun test --only-failures",
    "check:tsc": "tsgo --noEmit",
    "check:lint": "oxlint --type-aware src/",
    "check:format": "biome check",
    "format": "biome check --write .",
    "lint": "oxlint --type-aware src/",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "build": "tsdown && bun regenerate-exports && bun check-dist",
    "build:watch": "tsdown --watch",
    "clean": "rm -rf dist",
    "regenerate-exports": "bun run scripts/regenerate-exports.ts",
    "check-dist": "bun run scripts/check-dist.ts"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BernieSumption/beynac.git"
  },
  "bugs": {
    "url": "https://github.com/BernieSumption/beynac/issues"
  },
  "homepage": "https://github.com/BernieSumption/beynac#readme",
  "author": "Bernie Sumption",
  "license": "MIT",
  "devDependencies": {
    "@bradenmacdonald/s3-lite-client": "npm:@jsr/bradenmacdonald__s3-lite-client@0.9.4",
    "@types/bun": "1.2.19",
    "@typescript/native-preview": "^7.0.0-dev.20251023.1",
    "beynac": "workspace:",
    "bun-types": "1.2.19",
    "csstype": "3.1.3",
    "devalue": "^5.3.2",
    "next": "^15.0.0",
    "oxlint": "^1.24.0",
    "oxlint-tsgolint": "^0.2.1",
    "tsdown": "0.16.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "next": ">=15.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "module": "./dist/index.mjs"
}
